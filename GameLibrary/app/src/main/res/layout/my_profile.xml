<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shareAccountBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_share" />

    <ImageView
        android:id="@+id/profileGameConsole1"
        android:layout_width="@dimen/profileIconSize"
        android:layout_height="@dimen/profileIconSize"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/detail_console_3"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileConsolesLabel"
        app:srcCompat="@drawable/ic_xbox"
        tools:srcCompat="@drawable/ic_xbox" />

    <ImageView
        android:id="@+id/profileGameConsole2"
        android:layout_width="@dimen/profileIconSize"
        android:layout_height="@dimen/profileIconSize"
        android:layout_margin="8dp"
        android:contentDescription="@string/detail_console_2"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/profileGameConsole3"
        app:layout_constraintTop_toBottomOf="@+id/profileConsolesLabel"
        app:srcCompat="@drawable/ic_ps"
        tools:srcCompat="@drawable/ic_ps" />

    <ImageView
        android:id="@+id/profileGameConsole3"
        android:layout_width="@dimen/profileIconSize"
        android:layout_height="@dimen/profileIconSize"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/detail_console_1"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/profileGameConsole1"
        app:layout_constraintTop_toBottomOf="@+id/profileConsolesLabel"
        app:srcCompat="@drawable/ic_windows"
        tools:srcCompat="@drawable/ic_windows" />

    <ImageView
        android:id="@+id/profileGameConsole4"
        android:layout_width="@dimen/profileIconSize"
        android:layout_height="@dimen/profileIconSize"
        android:layout_margin="8dp"
        android:contentDescription="@string/detail_console_4"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/profileGameConsole1"
        app:layout_constraintTop_toBottomOf="@+id/profileConsolesLabel"
        app:srcCompat="@drawable/ic_nintendo"
        tools:srcCompat="@drawable/ic_nintendo" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="@dimen/profileImageSize"
        android:layout_height="@dimen/profileImageSize"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/profileCameraBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/camera"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/profileGalleryBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        tools:visibility="visible" />

    <Button
        android:id="@+id/profileGalleryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/gallery"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/profileCameraBtn"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/profileEmailLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/email"
        android:textAlignment="center"
        android:textSize="@dimen/profileLabelTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileCameraBtn" />

    <TextView
        android:id="@+id/profileEmailVertLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/emailVerified"
        android:textAlignment="center"
        android:textSize="@dimen/profileLabelTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEmailLabel" />

    <TextView
        android:id="@+id/profileEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEmailVertLabel"
        tools:text="DrewPlayStot@yahoo.com" />

    <TextView
        android:id="@+id/ProfileDisplayNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/displayName"
        android:textAlignment="center"
        android:textSize="@dimen/profileLabelTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEmailText" />

    <TextView
        android:id="@+id/ProfileNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileDisplayNameLabel"
        tools:text="Drew Play Stotic" />

    <TextView
        android:id="@+id/ProfileIdLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/userId"
        android:textAlignment="center"
        android:textSize="@dimen/profileLabelTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileNameText" />

    <TextView
        android:id="@+id/ProfileUserIdText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileIdLabel"
        tools:text="2309sdf09375023DKFJ750923570" />

    <TextView
        android:id="@+id/profileLibraryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/library"
        android:textAlignment="center"
        android:textSize="@dimen/profileLabelTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileChangeConsolesBtn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/libraryRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:scrollbarStyle="insideInset"
        android:scrollbars="horizontal"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLibraryLabel" />

    <TextView
        android:id="@+id/profileWishlistLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/wishlist"
        android:textAlignment="center"
        android:textSize="@dimen/profileLabelTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/libraryRecycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wishlistRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:scrollbarStyle="insideInset"
        android:scrollbars="horizontal"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileWishlistLabel" />

    <TextView
        android:id="@+id/profileConsolesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/preferredConsoles"
        android:textSize="@dimen/profileLabelTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileUserIdText" />

    <Button
        android:id="@+id/profileChangeConsolesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/change"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileGameConsole4" />

</androidx.constraintlayout.widget.ConstraintLayout>

