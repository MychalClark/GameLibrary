<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ranken.mychal_clark.gamelibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameLibrary">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ComposeReviewActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/createReview"
            android:parentActivityName=".GameListActivity"/>

        <activity
            android:name=".MyProfileActivity"
            android:exported="true"
            android:label="@string/myProfile"
            android:parentActivityName=".GameListActivity"/>

        <activity
            android:name=".GameListActivity"
            android:exported="true"
            android:label="@string/app_name" />

        <activity
            android:name=".GameDetailsActivity"
            android:exported="true"
            android:label="@string/gameDetails"
            android:parentActivityName=".GameListActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.ranken.mychal_clark.gamelibrary.GameListActivity" />
        </activity>
    </application>

</manifest>